<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/abstract_grunge_decorative_relief_navy_blue_stucco_wall_texture_wide_angle_rough_colored_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/DiceimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="50dp"
            app:srcCompat="@drawable/pngfind_com_dice_png_571112" />
    </RelativeLayout>
    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:backgroundTint="@color/white"
        android:id="@+id/Rollbtn"
        android:text="Roll the dice"
        android:textColor="@color/black"
        app:cornerRadius="18dp" />

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">


        <ImageView
            android:id="@+id/oned"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginStart="59dp"
            android:outlineProvider="none"
            android:src="@drawable/dice_1" />

        <ImageView
            android:id="@+id/twod"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/dice_2" />
    </LinearLayout>

</LinearLayout>